# Core
API_PORT=18080
REDIS_URL=redis://redis:6379/0
DUCKDB_DB_PATH=/data/materialized_cache.duckdb
DUCKDB_THREADS=8

# Caching
CACHE_TTL_SECONDS=0
CACHE_MATERIALIZE=true
MATERIALIZE_KEEP_DAYS=0

# Security
ALLOW_ANY_URL=false
ALLOWED_PARQUET_HOSTS=digital-atlas.s3.amazonaws.com
ALLOW_BROAD_GEO=false

# CORS
CORS_ORIGINS=http://localhost:4774,http://127.0.0.1:4774,http://localhost:8000,http://127.0.0.1:8000
CORS_ORIGIN_REGEX=^https?://(localhost|127\.0\.0\.1)(:\d+)?$

# Admin cache clear
CACHE_CLEAR_TOKEN=change-me
CACHE_CLEAR_LOCAL_ONLY=true
