{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Dataset Registry",
  "type": "object",
  "minProperties": 1,
  "properties": {
    "$schema": { "type": "string" }
  },
  "additionalProperties": {
    "type": "object",
    "required": ["datasets"],
    "properties": {
      "description": { "type": "string" },
      "datasets": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "object",
          "required": ["key", "path"],
          "properties": {
            "key": { "type": "string", "minLength": 2 },
            "description": { "type": "string" },
            "path": {
              "oneOf": [
                { "type": "string", "minLength": 2 },
                { "type": "array", "minItems": 1, "items": { "type": "string", "minLength": 2 } }
              ]
            },
            "hive": { "type": "boolean", "default": false },
            "selector": { "type": "object" }
          },
          "allOf": [
            {
              "if": { "properties": { "path": { "type": "array" } }, "required": ["path"] },
              "then": {
                "anyOf": [
                  { "required": ["hive"], "properties": { "hive": { "const": true } } }
                ]
              }
            }
          ],
          "additionalProperties": true
        }
      }
    },
    "additionalProperties": true
  }
}
